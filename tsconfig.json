{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": false,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"experimentalDecorators": false,
		"forceConsistentCasingInFileNames": true,
		"newLine": "LF",
		"module": "nodenext",
		"moduleResolution": "node16",
		"pretty": true,
		"resolveJsonModule": true,
		"types": [
			"node",
			"browserify",
			"codemirror",
			"del",
			"gulp-pug",
			"sass-embedded"
		],
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"rootDir": "."
	},
	"include": [
		"./main.ts",
		"./browserViews/js/**/*.ts",
		"./chrome_messaging/**/*.ts",
		"./classes/**/*.ts",
		"./src/**/*.ts",
		"./locales/**/*.json"
	],
	"exclude": [
		"./node_modules/*.ts",
		"./**/*.d.ts",
		"./browserViews/js/_fix_exports.ts",
		"./browserViews/js/_import-map-loader.ts"
	]
}
