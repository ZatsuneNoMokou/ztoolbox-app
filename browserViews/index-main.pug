//-main.grid.no-c-gap.no-r-gap
main.grid
	input#main.hidden(type='radio', name="menu", value='main')
	input#codeTester.hidden(type='radio', name="menu", value='code-tester')
	input#settings.hidden(type='radio', name="menu", value='settings')
	input#infos.hidden(type='radio', name="menu", value='infos')

	div.display-contents(data-menu-show='main')
		section#websitesData

	div.display-contents(data-menu-show='main')
		section#wsClientDatas

	div.grid-12.hidden(data-menu-show='main')
		label(for="main_textarea_output", data-translate-id="output") Output
		textarea#main_textarea_output(readonly)

	div.grid-12(data-menu-show='code-tester')
		button(data-reload-iframe="", data-translate-id="runCode") Run code !

	div#variousInfos.grid-12(data-menu-show='infos')
		div.loader-container
			svg.loader(width="1em", height="1em")
				circle(cx="0.5em", cy="0.5em", r="0.45em")

	div.grid-12#settingsContainer(data-menu-show='settings')
		div.loader-container
			svg.loader(width="1em", height="1em")
				circle(cx="0.5em", cy="0.5em", r="0.45em")

	div#input1.grid-4(data-menu-show='code-tester')
	div#input2.grid-4(data-menu-show='code-tester')
	div#input3.grid-4(data-menu-show='code-tester')

	iframe#iframe.grid-12(sandbox='allow-same-origin allow-scripts', src='iframe.html', data-menu-show='code-tester')
